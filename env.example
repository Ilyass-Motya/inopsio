# Inopsio Environment Variables
# Copy this file to .env.local and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=inopsio_dev_password
DATABASE_URL=postgresql://inopsio:inopsio_dev_password@localhost:5432/inopsio

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# VAULT CONFIGURATION
# =============================================================================
VAULT_ROOT_TOKEN=inopsio_dev_token
VAULT_URL=http://localhost:8200
VAULT_ADDR=http://localhost:8200

# =============================================================================
# KEYCLOAK CONFIGURATION
# =============================================================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_PASSWORD=admin_password
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=inopsio

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
GRAFANA_PASSWORD=admin_password
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@inopsio.local
SMTP_SECURE=false

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_VERCEL_URL=

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:8000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption keys (generate new ones for production)
ENCRYPTION_KEY=your_encryption_key_here
API_KEY_SECRET=your_api_key_secret_here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# AWS Configuration (if using AWS services)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Azure Configuration (if using Azure services)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# Google Cloud Configuration (if using GCP services)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=true
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_DATABASE_URL=postgresql://inopsio:inopsio_test_password@localhost:5432/inopsio_test
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
# GDPR Configuration
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=2555

# SOC 2 Configuration
SOC2_ENABLED=true
AUDIT_TRAIL_ENABLED=true

# ISO 27001 Configuration
ISO27001_ENABLED=true
SECURITY_MONITORING_ENABLED=true

# HIPAA Configuration (if applicable)
HIPAA_ENABLED=false
PHI_ENCRYPTION_ENABLED=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_SERVICE=true
ENABLE_CRM_SERVICE=true
ENABLE_ERP_SERVICE=true
ENABLE_EMAIL_SERVICE=true
ENABLE_WORKFLOW_SERVICE=true
ENABLE_MONITORING_SERVICE=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_SECRET=your_session_secret_here
SESSION_COOKIE_MAX_AGE=86400000  # 24 hours

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_PUSH_ENABLED=true

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Slack Integration
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL=

# Discord Integration
DISCORD_WEBHOOK_URL=

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Hot reloading
HOT_RELOAD=true
WATCH_MODE=true

# Debugging
DEBUG_PORT=9229
DEBUG_BREAK_ON_START=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and modify for production deployment
# NODE_ENV=production
# LOG_LEVEL=info
# DEBUG=false
# ENABLE_SWAGGER=false
# ENABLE_GRAPHQL_PLAYGROUND=false
