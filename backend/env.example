# Inopsio Backend Environment Variables
# Copy this file to .env and update the values

# Application Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/inopsio_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=inopsio_dev
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=inopsio
KEYCLOAK_CLIENT_ID=inopsio-backend
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Vault Configuration
VAULT_URL=http://localhost:8200
VAULT_TOKEN=root
VAULT_NAMESPACE=

# API Configuration
API_VERSION=v1
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CSP_ENABLED=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE=logs/app.log

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=3002

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@inopsio.com

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=uploads
AWS_S3_BUCKET=inopsio-uploads
AWS_S3_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Third-party Integrations
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
SENDGRID_API_KEY=your_sendgrid_api_key

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Feature Flags
FEATURE_FLAGS_ENABLED=true
FEATURE_FLAGS_URL=http://localhost:3001/api/feature-flags

# WebSocket Configuration
WS_ENABLED=true
WS_PORT=3003
WS_PATH=/ws

# Development Configuration
DEBUG=true
HOT_RELOAD=true
AUTO_RESTART=true

# Production Configuration (override in production)
# NODE_ENV=production
# LOG_LEVEL=info
# DEBUG=false
# HOT_RELOAD=false
# AUTO_RESTART=false
