# Inopsio Frontend Environment Variables
# Copy this file to .env.local and update the values

# Public API Configuration
NEXT_PUBLIC_API_URL=https://api.inopsio.com
NEXT_PUBLIC_APP_URL=https://app.inopsio.com

# Authentication Configuration
NEXT_PUBLIC_AUTH_DOMAIN=auth.inopsio.com
NEXT_PUBLIC_AUTH_CLIENT_ID=inopsio-frontend
NEXT_PUBLIC_AUTH_AUDIENCE=https://api.inopsio.com

# Feature Flags
NEXT_PUBLIC_FEATURE_FLAGS_ENABLED=true
NEXT_PUBLIC_FEATURE_FLAGS_URL=https://api.inopsio.com/feature-flags

# Analytics Configuration
NEXT_PUBLIC_ANALYTICS_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Monitoring Configuration
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_ENABLED=true

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_LOG_LEVEL=debug

# Build Configuration
NEXT_PUBLIC_BUILD_ID=local
NEXT_PUBLIC_VERSION=1.0.0

# Third-party Integrations
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_key
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=wss://ws.inopsio.com
NEXT_PUBLIC_WS_ENABLED=true

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.inopsio.com
NEXT_PUBLIC_CDN_ENABLED=true

# Security Configuration
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_CSP_REPORT_URI=https://api.inopsio.com/csp-report

# Performance Configuration
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1

# Local Development
NEXT_PUBLIC_LOCAL_API_URL=http://localhost:3001
NEXT_PUBLIC_LOCAL_WS_URL=ws://localhost:3001
