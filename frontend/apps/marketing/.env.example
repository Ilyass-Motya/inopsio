# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Inopsio
NEXT_PUBLIC_APP_ENV=development

# CMS (Strapi/Payload CMS)
NEXT_PUBLIC_CMS_URL=http://localhost:1337
CMS_API_TOKEN=your_cms_api_token_here
CMS_WEBHOOK_SECRET=your_webhook_secret_here

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=inopsio.com
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Contact Form / Email
EMAIL_SERVICE_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM_ADDRESS=noreply@inopsio.com
EMAIL_TO_ADDRESS=contact@inopsio.com

# Demo Booking (Calendly/Cal.com)
NEXT_PUBLIC_CALENDLY_URL=https://calendly.com/inopsio/demo
NEXT_PUBLIC_ENABLE_DEMO_BOOKING=true

# Feature Flags
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true
NEXT_PUBLIC_ENABLE_LIVE_CHAT=false

# SEO
NEXT_PUBLIC_SITE_NAME=Inopsio
NEXT_PUBLIC_SITE_DESCRIPTION=Unified business platform with CRM, ERP, and cybersecurity
NEXT_PUBLIC_TWITTER_HANDLE=@inopsio
NEXT_PUBLIC_OG_IMAGE=https://inopsio.com/og-image.jpg

# Security (Internal - DO NOT EXPOSE TO CLIENT)
API_SECRET_KEY=your_secret_key_here
REVALIDATION_TOKEN=your_revalidation_token_here
